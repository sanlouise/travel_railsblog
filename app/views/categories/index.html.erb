<h1 class="center"> All Categories </h1>
</br>
</br>
<div class="text-center">
  <%= will_paginate %>

  
    <% @categories.each do |category| %>
    
      <ul class="listing">
        <div class="row center">
          <div class="well col-md-4 col-md-offset-4">
            <li class="article-title">
             
              <strong><%= link_to "#{category.name}", category_path(category) %></strong>
            </li>
              </br>
              
            <li><small><%= pluralize(category.articles.count, "article") %> </small></li>
            <% if current_user.admin? %>
            </br>
              <%= link_to "Edit", edit_category_path(category), class: "btn btn-xs btn-warning" %> 
            <% end %>
          </div>
         
        </div>
        
      </ul>
    <% end %>
  <%= will_paginate %>
</div>