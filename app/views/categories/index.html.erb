<h1 class="center"> All Categories </h1>
</br>
</br>

<% @categories.each do |category| %>
  <ul class="listing">
    <div class="row center">
      <div class="well col-md-4 col-md-offset-4">
        <li class="article-title">
          <%= link_to "#{category.name}", category_path(category) %>
        </li>
      </div>
    </div>
    
  </ul>
<% end %>