<h1> Edit your Article </h1>

<% if @article.errors.any? %>
<h2>The following errors prevented this story from being saved: </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title, "Story Title" %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :city, "City Visited" %><br/>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :country, "Country" %><br/>
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label :description, "Your Story" %> </br>
    <%= f.text_area :description, rows: 15 %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>