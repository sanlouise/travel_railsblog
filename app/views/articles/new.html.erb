<h1> Create an Article </h1>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title, "Story Title" %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :city, "City Visited" %><br/>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :country, "Country" %><br/>
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label :description, "Your Story" %> </br>
    <%= f.text_area :description, rows: 15 %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>