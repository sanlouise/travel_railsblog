<body class ="image responsive index-users-bg">
  <h1 class="text-center">All Story Writers</h1>
  
<div class="text-center">
  <%= will_paginate %>
  <div class="row">

      <div class="col-md-8 col-md-offset-2 well">
        <% @users.each do |user, index| %>
          <ul class="listing">
            <div class="col-md-3 text-center">

                  <li><%= link_to gravatar_for(user), user_path(user) %></li>
                    <div class="user-index-bg">
                      <li class="article-title">
                        <%= link_to user.username, user_path(user) %></li>
                      <li>
                        
                        <small class="black">
                          <%= pluralize(user.articles.count, "article") if user.articles %>
                        </small>
                        
                      </li>
                    </div>

                </br>
                
                <!--Chat Functionality-->
                
                <% if logged_in? %>
                  <div class="chat-class">

                    <%= link_to "Chat", "#", class: "btn btn-success btn-xs start-conversation",
                                "data-sid" => current_user.id, "data-rip" => user.id %>
                  </div>
                <% end %>
                
                <!--End Chat Functionality-->
                
                <% if logged_in? and current_user.admin? %>
                  <li><%= link_to "Delete User", user_path(user), method: :delete, class: "btn btn-danger",
                                data: { confirm: "Are you sure you want to delete this user and all associated stories?" } %> </li>
                <% end %>       
                
            </div>
          </ul>
        <% end %>

    <%= will_paginate %>
</div>
</body>
