<body class ="image responsive index-users-bg">
  <h1 class="text-center">All Story Writers</h1>
  <%= will_paginate %>
  <div class="text-center">
    <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            
            <li><%= link_to gravatar_for(user), user_path(user) %></li>
            <li class="article-title"><%= link_to user.username, user_path(user) %></li>
            <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
            </br>
            <% if logged_in? and current_user.admin? %>
            <li><%= link_to "Delete User", user_path(user), method: :delete, class: "btn btn-danger",
                            data: { confirm: "Are you sure you want to delete this user and all associated stories?" } %> </li>
                <% end %>          
          </div>
        </div>
      </ul>
    <% end %>
  <%= will_paginate %>
</div>

</body>
